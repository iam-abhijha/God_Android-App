                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgPundi"/>
            <TextView
                android:id="@+id/txtNamePundi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satyam pandey"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgPundi"
                android:layout_below="@id/txtIdPundi"/>
            <TextView
                android:id="@+id/txtEmailPundi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pundi@god.com"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgPundi"
                android:layout_below="@+id/txtNamePundi"/>
            <Button
                android:id="@+id/btnMessagePundi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPundi"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Send Message"
                android:background="#ff6e29"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="comingSoon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnMessagePundi"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="abhi.app.clan.MainActivity">

            <ImageView
                android:id="@+id/imgBeast"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/priyanshu"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtIdBeast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOD∆Beast"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgBeast"/>
            <TextView
                android:id="@+id/txtNameBeast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priyanshu Suman"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgBeast"
                android:layout_below="@id/txtIdBeast"/>
            <TextView
                android:id="@+id/txtEmailBeast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beast@god.com"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgBeast"
                android:layout_below="@+id/txtNameBeast"/>
            <Button
                android:id="@+id/btnMessageBeast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
