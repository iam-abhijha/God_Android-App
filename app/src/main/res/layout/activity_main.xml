                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Send Message"
                android:background="#ff6e29"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="comingSoon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnMessageBeast"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="abhi.app.clan.MainActivity">

            <ImageView
                android:id="@+id/imgHackzie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vatsal"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtIdHackzie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOD∆Hackzie"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgHackzie"/>
            <TextView
                android:id="@+id/txtNameHackzie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vatsal Nigam"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgHackzie"
                android:layout_below="@id/txtIdHackzie"/>
            <TextView
                android:id="@+id/txtEmailHackzie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hackzie@god.com"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgHackzie"
                android:layout_below="@+id/txtNameHackzie"/>
            <Button
                android:id="@+id/btnMessageHackzie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgHackzie"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Send Message"
                android:background="#ff6e29"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="comingSoon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnMessageHackzie"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>



        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit From App"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:background="#EB5056"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:onClick="exitButton"/>

    </LinearLayout>
</ScrollView>