<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="abhi.app.clan.MainActivity">

            <ImageView
                android:id="@+id/imgDeadshot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/abhi"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtIdDeadshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOD∆DeadShot"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgDeadshot"/>
            <TextView
                android:id="@+id/txtNameDeadshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abhinandan Kumar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgDeadshot"
                android:layout_below="@id/txtIdDeadshot"/>
            <TextView
                android:id="@+id/txtEmailDeadshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="deadshot@god.com"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2sp"
                android:layout_toRightOf="@+id/imgDeadshot"
                android:layout_below="@+id/txtNameDeadshot"/>
            <Button
                android:id="@+id/btnMessageDeadshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgDeadshot"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Send Message"
                android:background="#ff6e29"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="comingSoon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----------------------------------------"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnMessageDeadshot"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="abhi.app.clan.MainActivity">

